<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/content_spacing">

    <!--Item one-->
    <include
        android:id="@+id/item_one"
        layout="@layout/shimmer_stat_item"
        android:layout_width="0dp"
        android:layout_height="@dimen/shimmer_stat_item_height"
        android:layout_marginEnd="@dimen/shimmer_stat_item_spacing"
        app:layout_constraintEnd_toStartOf="@+id/item_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Item two-->
    <include
        android:id="@+id/item_two"
        layout="@layout/shimmer_stat_item"
        android:layout_width="0dp"
        android:layout_height="@dimen/shimmer_stat_item_height"
        android:layout_marginStart="@dimen/shimmer_stat_item_spacing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_one" />

    <!--Item three-->
    <include
        android:id="@+id/item_three"
        layout="@layout/shimmer_stat_item"
        android:layout_width="0dp"
        android:layout_height="@dimen/shimmer_stat_item_height"
        android:layout_marginTop="@dimen/content_spacing"
        android:layout_marginEnd="@dimen/shimmer_stat_item_spacing"
        app:layout_constraintEnd_toStartOf="@+id/item_four"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_one" />

    <!--Item four-->
    <include
        android:id="@+id/item_four"
        layout="@layout/shimmer_stat_item"
        android:layout_width="0dp"
        android:layout_height="@dimen/shimmer_stat_item_height"
        android:layout_marginStart="@dimen/shimmer_stat_item_spacing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_three"
        app:layout_constraintTop_toTopOf="@+id/item_three" />


</androidx.constraintlayout.widget.ConstraintLayout>